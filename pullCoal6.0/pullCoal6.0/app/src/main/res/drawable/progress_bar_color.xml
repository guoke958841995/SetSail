<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  设置背景色（浅蓝色）  -->
    <item  android:id="@android:id/background" >
        <shape>
            <corners android:radius="6dp" />
            <gradient android:startColor="@color/short_blue"
                android:endColor="@color/short_blue" />
        </shape>
    </item>

    <!--  设置进度条颜色（深蓝色）  -->
    <item  android:id="@android:id/progress" >
        <clip>
            <shape>
                <corners android:radius="6dp" />
                <gradient  android:startColor="@color/app_title_text_color"
                    android:endColor="@color/app_title_text_color" />
            </shape>
        </clip>
    </item>

</layer-list>