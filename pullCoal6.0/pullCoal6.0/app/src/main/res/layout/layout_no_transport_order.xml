<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_no_transport_order"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:visibility="gone"
    android:background="@color/white">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_no_data"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:src="@mipmap/icon_no_transport_order" />

    <TextView
        android:id="@+id/tv_no_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/dp_20"
        android:drawablePadding="@dimen/sp_5"
        android:text="暂无货运单~"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black" />


    <Button
        android:id="@+id/btn_add"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/tv_no_data"
        android:layout_width="@dimen/dp_120"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_height="@dimen/dp_45"
        android:text="立刻抢单"
        android:background="@drawable/button_shape_pressed"/>


</RelativeLayout>