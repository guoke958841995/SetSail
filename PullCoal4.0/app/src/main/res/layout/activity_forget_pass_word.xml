<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include android:id="@+id/title_bar" layout="@layout/layout_main_header" />

    <ScrollView
        android:fadingEdge="none"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <FrameLayout
                android:id="@+id/framelayout_poi"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="43.83dp"
                    android:paddingBottom="40.5dp">

                    <LinearLayout
                        android:id="@+id/linearLayout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="20dp"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_register_first"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/register_step1_selected" />

                            <TextView
                                android:id="@+id/text_register_first"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="@string/left_drawer_item_fourth"
                                android:textColor="#54a1fd"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/image_register_second"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:src="@mipmap/register_step2_normal" />

                            <TextView
                                android:id="@+id/text_register_second"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="设置密码"
                                android:textColor="#c7c7c7"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:id="@+id/view2"
                    android:layout_width="80dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="53dp"
                    android:background="#54a1fd" />
            </FrameLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.sxhalo.PullCoal.tools.image.CircleImageView
                    android:layout_gravity="center_horizontal"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/iv_head"
                    android:layout_marginTop="@dimen/dip35"
                    android:layout_width="@dimen/dip90"
                    android:layout_height="@dimen/dip90"
                    android:src="@mipmap/icon_login"
                    app:border_color="#e0ffffff"
                    app:border_width="3dp"/>

                <TextView
                    android:layout_marginTop="@dimen/dip15"
                    android:layout_marginBottom="@dimen/dip35"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/user_nike"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <View
                        android:id="@+id/et_top"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line_color" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip"
                        android:layout_marginTop="10dp" >



                        <ImageView
                            android:id="@+id/psw_close"
                            android:layout_width="30.0dip"
                            android:layout_height="45.0dip"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="15.0dip"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:scaleType="center"
                            android:src="@mipmap/icon_close_btn"
                            android:visibility="invisible" />

                        <EditText
                            android:id="@+id/phoneNember_et"
                            android:layout_width="220dp"
                            android:layout_height="45.0dip"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="30dp"
                            android:background="@color/white"
                            android:hint="@string/phone_hint"
                            android:textCursorDrawable="@drawable/shape_textcursor"
                            android:maxEms="11"
                            android:minEms="11"
                            android:maxLength="11"
                            android:inputType="number"
                            android:paddingLeft="13.0dip"
                            android:paddingRight="13.0dip"
                            android:singleLine="true"
                            android:textColor="#333333"
                            android:textColorHint="#c7c7c7"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="手机号"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="@color/line_color" />

                    <FrameLayout
                        android:layout_width="fill_parent"
                        android:layout_height="45.0dip"
                        android:layout_marginTop="10dp" >

                        <EditText
                            android:textCursorDrawable="@drawable/shape_textcursor"
                            android:id="@+id/verification_code_et"
                            android:layout_width="match_parent"
                            android:layout_height="45.0dip"
                            android:layout_marginLeft="80dp"
                            android:layout_marginRight="@dimen/dip120"
                            android:background="@color/white"
                            android:hint="@string/phone_hint1"
                            android:inputType="number"
                            android:maxEms="4"
                            android:minEms="4"
                            android:maxLength="4"
                            android:paddingLeft="13.0dip"
                            android:paddingRight="13.0dip"
                            android:singleLine="true"
                            android:textColor="#333333"
                            android:textColorHint="#c7c7c7"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="30.0dip"
                            android:layout_height="45.0dip"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="15.0dip"
                            android:background="@android:color/transparent"
                            android:clickable="true"
                            android:scaleType="center"
                            android:src="@mipmap/icon_close_btn"
                            android:visibility="invisible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="验证码"
                            android:textColor="#333333"
                            android:textSize="16sp" />

                        <Button
                            android:id="@+id/verification_code_btn"
                            style="@style/SmsButton"
                            android:paddingLeft="5dp"
                            android:paddingRight="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="45.0dp"
                            android:layout_gravity="right|center"
                            android:layout_marginRight="20.5dp"
                            android:text="获取验证码"
                            android:textColor="#fff"
                            android:textSize="16sp" />
                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="10dp"
                        android:background="@color/line_color" />
                </LinearLayout>

                <Button
                    android:id="@+id/next_btn"
                    style="@style/SmsButton"
                    android:layout_width="fill_parent"
                    android:layout_height="45.0dip"
                    android:layout_marginLeft="20.5dp"
                    android:layout_marginRight="20.5dp"
                    android:layout_marginTop="67.13dp"
                    android:text="下一步"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip15"
                    android:layout_marginRight="@dimen/dip15"
                    android:layout_marginTop="@dimen/dip10">

                    <CheckBox
                        android:id="@+id/checkbox"
                        style="@style/CustomCheckboxTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true" />

                    <TextView
                        android:id="@+id/register_user_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dip5"
                        android:layout_toRightOf="@+id/checkbox"
                        android:textColor="@color/first_fargment_text_grays"
                        android:textSize="13sp" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>