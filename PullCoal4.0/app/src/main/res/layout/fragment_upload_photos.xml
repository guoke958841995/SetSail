<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:fadingEdge="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:gravity="center_vertical"
                android:padding="@dimen/dip20"
                android:paddingLeft="@dimen/dip10"
                android:background="@color/white"
                android:text="行驶证上传不清晰请重新上传"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/audit_reason"
                android:textColor="@color/actionsheet_red" />

            <LinearLayout
                android:layout_marginTop="@dimen/dip10"
                android:padding="@dimen/dip20"
                android:background="@drawable/item_bt_bg"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="驾驶证正面和附页照"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/positive_title"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_marginTop="@dimen/dip5"
                        android:text="请用手机横向拍摄以保证图片正常显示！"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/actionsheet_gray" />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="@dimen/dip15"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:background="@mipmap/photo_upload_background"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center"
                            android:src="@mipmap/add_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="223dp"
                            android:layout_height="161dp"
                            android:id="@+id/driver_license_photo_upload_image" />

                    </FrameLayout>

                    <TextView
                        android:padding="@dimen/dip10"
                        android:gravity="center"
                        android:background="@mipmap/photo_upload_background_tv"
                        android:layout_marginBottom="@dimen/dip6"
                        android:layout_gravity="center_horizontal|bottom"
                        android:text="点击拍照"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/driver_upload_tv"
                        android:textColor="@color/app_title_text_color"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/item_bt_bg"
                android:paddingLeft="@dimen/dip20"
                android:paddingRight="@dimen/dip20"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="行驶证正面"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/back_title"
                        android:textColor="@color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_marginTop="@dimen/dip5"
                        android:text="请用手机横向拍摄以保证图片正常显示！"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/actionsheet_gray" />
                </LinearLayout>

                <LinearLayout
                    android:paddingTop="@dimen/dip15"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <FrameLayout
                        android:background="@mipmap/photo_upload_background"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_gravity="center"
                            android:src="@mipmap/add_photo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_gravity="center"
                            android:layout_width="223dp"
                            android:layout_height="161dp"
                            android:id="@+id/driving_license_photo_upload_image" />
                    </FrameLayout>

                    <TextView
                        android:padding="@dimen/dip10"
                        android:gravity="center"
                        android:background="@mipmap/photo_upload_background_tv"
                        android:layout_marginBottom="@dimen/dip6"
                        android:layout_gravity="center_horizontal|bottom"
                        android:text="点击上传"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/driving_upload_tv"
                        android:textColor="@color/app_title_text_color"
                        android:textSize="16sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dip30"
                android:padding="@dimen/dip10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/dip10"
                    android:layout_marginRight="@dimen/dip10"
                    android:padding="@dimen/dip10"
                    android:text="提  交"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/submit_btn"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:background="@drawable/button_shape" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>