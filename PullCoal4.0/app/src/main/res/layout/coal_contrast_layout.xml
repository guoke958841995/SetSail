<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/line_color"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip50">

        <LinearLayout
            android:layout_marginTop="@dimen/dip5"
            android:layout_marginRight="@dimen/dip10"
            android:orientation="horizontal"
            android:layout_weight="6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.sxhalo.PullCoal.ui.addrightview.RightTopView
                android:id="@+id/contrast_view1"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/bg_amount_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/contrast_text1"
                        android:lines="1"
                        android:ellipsize="end"
                        android:maxEms="5"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dip3"
                        android:text="煤炭名称" />
                </LinearLayout>


                <ImageView
                    android:id="@+id/contrast_iv1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_clear" />

            </com.sxhalo.PullCoal.ui.addrightview.RightTopView>

            <com.sxhalo.PullCoal.ui.addrightview.RightTopView
                android:id="@+id/contrast_view2"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/bg_amount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/contrast_text2"
                        android:lines="1"
                        android:ellipsize="end"
                        android:maxEms="5"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dip3"
                        android:text="煤炭名称" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/contrast_iv2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_clear" />

            </com.sxhalo.PullCoal.ui.addrightview.RightTopView>

            <com.sxhalo.PullCoal.ui.addrightview.RightTopView
                android:id="@+id/contrast_view3"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <LinearLayout
                    android:gravity="center"
                    android:background="@drawable/bg_amount_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/contrast_text3"
                        android:lines="1"
                        android:ellipsize="end"
                        android:maxEms="5"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dip3"
                        android:text="煤炭名称" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/contrast_iv3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@mipmap/icon_clear" />

            </com.sxhalo.PullCoal.ui.addrightview.RightTopView>

        </LinearLayout>

        <TextView
            android:id="@+id/state_contrast"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="@color/blue"
            android:layout_weight="1"
            android:text="开始对比"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

    </LinearLayout>

</LinearLayout>
