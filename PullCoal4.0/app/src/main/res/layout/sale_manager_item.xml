<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>


        <RelativeLayout
            android:padding="@dimen/dip10"
            android:background="@drawable/item_bt_bg"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <LinearLayout
                android:layout_marginTop="@dimen/dip5"
                android:layout_marginBottom="@dimen/dip5"
                android:paddingRight="@dimen/dip15"
                android:paddingLeft="@dimen/dip15"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:gravity="center"
                    android:background="@drawable/button_shape"
                    android:text="+好友"
                    android:paddingRight="@dimen/dip5"
                    android:paddingLeft="@dimen/dip5"
                    android:paddingTop="@dimen/dip2"
                    android:paddingBottom="@dimen/dip2"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/sale_manager_add_haoyou" />

                <TextView
                    android:gravity="center"
                    android:text="已是好友"
                    android:textColor="@color/actionsheet_gray"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/sale_haoyou" />

            </LinearLayout>


            <ImageView
                android:layout_marginLeft="@dimen/dip15"
                android:src="@mipmap/sales_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_marginLeft="@dimen/dip10"
                android:text="沙滩"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView2"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:id="@+id/information_department_name" />

            <ImageView
                android:src="@mipmap/sales_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/imageView2"
                android:layout_toRightOf="@+id/information_department_name"
                android:layout_toEndOf="@+id/information_department_name"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:id="@+id/imageView6" />

            <TextView
                android:text="18036985214"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/imageView6"
                android:layout_toRightOf="@+id/imageView6"
                android:layout_toEndOf="@+id/imageView6"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:id="@+id/information_department_tel" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>

    </LinearLayout>
</LinearLayout>