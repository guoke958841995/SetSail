<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/item_bt_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dip5">


    <View
        android:layout_width="match_parent"
        android:layout_height="10px"
        android:background="@color/app_title_text_color"/>
    <LinearLayout
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@color/white"
            android:padding="@dimen/dip15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="货运类型："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/app_title_text_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/order_type"
                    android:textSize="16sp"
                    android:textColor="@color/app_title_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:gravity="center"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/state"
                    android:textSize="16sp"
                    android:textColor="@color/app_title_text_color" />

                <TextView
                    android:text="接受"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/yes"
                    android:gravity="center"
                    android:padding="@dimen/dip3"
                    android:layout_marginRight="@dimen/dip5"
                    android:textColor="@color/white"
                    android:layout_weight="1"
                    android:textSize="16sp"
                    android:background="@color/app_title_text_color" />

                <TextView
                    android:text="拒绝"
                    android:id="@+id/no"
                    android:gravity="center"
                    android:padding="@dimen/dip3"
                    android:layout_marginLeft="@dimen/dip5"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/actionsheet_red" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:padding="@dimen/dip15"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:src="@mipmap/transport_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:text="货运单号："
                android:layout_marginLeft="@dimen/dip10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/app_title_text_color_normal" />

            <TextView
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/waybill_num"
                android:textColor="@color/actionsheet_red"
                android:textSize="16sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color"/>
    </LinearLayout>



</LinearLayout>