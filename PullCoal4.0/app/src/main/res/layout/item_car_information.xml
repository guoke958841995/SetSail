<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingTop="@dimen/dip8"
    android:paddingBottom="@dimen/dip8"
    android:paddingLeft="@dimen/dip15"
    android:paddingRight="@dimen/dip15">

    <TextView
        android:id="@+id/tv_car_plate_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/light_yellow"
        android:padding="@dimen/dip1"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_car_type"
        android:layout_marginTop="@dimen/dip5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_car_plate_number"
        android:layout_centerVertical="true"
        android:textColor="@color/actionsheet_gray" />

    <TextView
        android:id="@+id/tv_car_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_plate_number"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dip10"
        android:layout_toRightOf="@+id/tv_car_type"
        android:textColor="@color/actionsheet_gray" />

    <TextView
        android:id="@+id/tv_car_self_weight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_car_type"
        android:layout_marginTop="@dimen/dip5"
        android:textColor="@color/actionsheet_gray" />

    <TextView
        android:id="@+id/tv_car_load"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_car_type"
        android:layout_marginLeft="@dimen/dip10"
        android:layout_marginTop="@dimen/dip5"
        android:layout_toRightOf="@+id/tv_car_self_weight"
        android:textColor="@color/actionsheet_gray" />

    <TextView
        android:id="@+id/tv_status"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/actionsheet_gray"/>
</RelativeLayout>