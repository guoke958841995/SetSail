<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:layout_gravity="center"
    android:paddingRight="@dimen/dip40"
    android:paddingLeft="@dimen/dip40">


    <TextView
        android:id="@+id/close_clear_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@mipmap/ic_close_clear" />

    <RelativeLayout
        android:layout_gravity="top"
        android:layout_marginTop="@dimen/dip45"
        android:background="@color/transparent"
        android:id="@+id/count_view_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</FrameLayout>