<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_bt_bg">

    <LinearLayout
        android:orientation="horizontal"
        android:padding="@dimen/dip15"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <FrameLayout
            android:layout_gravity="center"
            android:layout_width="65dp"
            android:layout_height="65dp" >

            <com.sxhalo.PullCoal.tools.image.CircleImageView
                android:id="@+id/friend_image"
                android:src="@mipmap/main_tab_item"
                android:layout_width="63dp"
                android:layout_height="63dp"
                app:border_color="#ffffffff"
                app:border_width="2dp" >
            </com.sxhalo.PullCoal.tools.image.CircleImageView>

            <ImageView
                android:layout_marginBottom="0dp"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/driver_current_status"
                android:src="@mipmap/free" />
        </FrameLayout>

        <RelativeLayout
            android:layout_marginLeft="@dimen/dip10"
            android:layout_marginRight="@dimen/dip10"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/driver"
                    android:textColor="@color/white"
                    android:background="@mipmap/driver" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/other"
                    android:textColor="@color/white"
                    android:background="@mipmap/other" />

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/infor_dep"
                    android:textColor="@color/white"
                    android:background="@mipmap/infor_dep" />


                <TextView
                    android:text="好友昵称"
                    android:layout_marginLeft="@dimen/dip10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/friiend_name" />

            </LinearLayout>

            <TextView
                android:layout_alignParentRight="true"
                android:text="昨天"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_friends_time"/>

            <TextView
                android:visibility="gone"
                android:text="你已经添加了该用户为好友，现在开始"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/friend_introduce"
                android:layout_marginBottom="5dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />


        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_color"/>
</LinearLayout>