<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/dip10"
    android:paddingBottom="@dimen/dip10"
    android:paddingLeft="@dimen/dip15"
    android:paddingRight="@dimen/dip15"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="姓        名" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_toRightOf="@+id/tv_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip15" />

        <TextView
            android:visibility="gone"
            android:layout_toRightOf="@+id/tv_name"
            android:id="@+id/tv_is_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip5"
            android:background="@drawable/shape_light_yellow"
            android:padding="@dimen/dip2"
            android:text="好友"
            android:textColor="@color/white"
            android:textSize="@dimen/font10" />

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:padding="@dimen/dip2"
            android:text="编辑"
            android:visibility="gone"
            android:textColor="@color/actionsheet_blue" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/dip5"
        android:layout_marginBottom="@dimen/dip5"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_phone_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系电话" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip15"
            android:layout_toRightOf="@+id/tv_phone_title" />

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/actionsheet_blue"
            android:padding="@dimen/dip2"
            android:text="平台认证司机"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="车  牌  号" />

        <TextView
            android:id="@+id/tv_plate_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/main_header_bg"
            android:layout_marginLeft="@dimen/dip15" />

    </LinearLayout>


</LinearLayout>