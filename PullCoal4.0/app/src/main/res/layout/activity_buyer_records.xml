<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        style="@style/title_bar_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip50">

        <ImageView
            android:id="@+id/title_bar_left"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:gravity="center_vertical"
            android:src="@drawable/btn_back"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <TextView
                android:id="@+id/tv_sampling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_left_selected"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="采样记录"
                android:textColor="@drawable/shape_corner_text_color"
                android:textSize="@dimen/font15" />

            <TextView
                android:id="@+id/tv_laboratory_tests"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_right_selected"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:text="化验记录"
                android:textColor="@drawable/shape_corner_text_color"
                android:textSize="@dimen/font15" />
        </LinearLayout>

    </RelativeLayout>

    <com.sxhalo.PullCoal.ui.scrolllayout.content.NoScrollViewPager
        android:id="@+id/my_viewpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
