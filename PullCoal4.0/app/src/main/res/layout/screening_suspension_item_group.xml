<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="afterDescendants">

       <LinearLayout
           android:descendantFocusability="afterDescendants"
           android:background="@color/white"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="@dimen/dip45">

           <RelativeLayout
               android:layout_marginLeft="@dimen/dip15"
               android:gravity="left"
               android:background="@drawable/item_bt_bg"
               android:id="@+id/rl_order"
               android:layout_width="@dimen/dip0"
               android:layout_height="match_parent"
               android:layout_weight="1">

               <TextView
                   android:id="@+id/tv_order"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_centerInParent="true"
                   android:ems="4"
                   android:ellipsize="end"
                   android:textColor="@color/app_title_text_color_normal"
                   android:maxLines="1"
                   android:gravity="center|left"
                   android:text="煤炭类型" />

               <ImageView
                   android:id="@+id/iv_order"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@+id/tv_order"
                   android:src="@mipmap/icon_arrow_down" />

           </RelativeLayout>

           <RelativeLayout
               android:background="@drawable/item_bt_bg"
               android:id="@+id/rl_msg_type"
               android:layout_width="@dimen/dip0"
               android:layout_height="match_parent"
               android:layout_weight="1">

               <TextView
                   android:id="@+id/tv_msg_type"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:layout_centerInParent="true"
                   android:ems="4"
                   android:ellipsize="end"
                   android:textColor="@color/app_title_text_color_normal"
                   android:maxLines="1"
                   android:gravity="center"
                   android:text="排序" />

               <ImageView
                   android:id="@+id/iv_msg_type"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_toRightOf="@+id/tv_msg_type"
                   android:src="@mipmap/icon_arrow_down" />

           </RelativeLayout>

           <View
               android:layout_width="0.5dp"
               android:layout_height="match_parent"
               android:background="@color/line_color" />

           <LinearLayout
               android:background="@drawable/item_bt_bg"
               android:id="@+id/layout_filter"
               android:layout_width="@dimen/dip0"
               android:layout_height="match_parent"
               android:layout_weight="1"
               android:gravity="center"
               android:orientation="horizontal">

               <TextView
                   android:id="@+id/tv_filter"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="@dimen/dip3"
                   android:textColor="@color/app_title_text_color_normal"
                   android:text="筛选" />

               <ImageView
                   android:layout_width="@dimen/dip14"
                   android:layout_height="@dimen/dip14"
                   android:layout_marginLeft="@dimen/dip3"
                   android:src="@drawable/icon_filter"/>

           </LinearLayout>

       </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/line_color" />

</LinearLayout>
