<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_main_header" />

    <RelativeLayout
        android:id="@+id/layout_coal_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip60"
        android:gravity="center_vertical"
        android:background="@color/white">
        
        <ImageView
            android:id="@+id/iv_coal"
            android:layout_marginLeft="@dimen/dip10"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dip50"
            android:layout_height="@dimen/dip50"
            android:src="@drawable/icon_coal_appointment_message"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/tv_coal"
            android:layout_toRightOf="@+id/iv_coal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dip10"
            android:textSize="@dimen/font15"
            android:text="煤炭预约通知" />

        <TextView
            android:visibility="gone"
            android:id="@+id/iv_red_point_coal"
            android:layout_width="@dimen/dip15"
            android:layout_height="@dimen/dip15"
            android:gravity="center"
            android:textSize="@dimen/font10"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/tv_coal"
            android:layout_alignTop="@+id/tv_coal"
            android:background="@mipmap/sin" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dip60"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/layout_freight_message"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dip60"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_transport"
            android:layout_marginLeft="@dimen/dip10"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dip50"
            android:layout_height="@dimen/dip50"
            android:src="@drawable/icon_transport_message"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/tv_transport"
            android:layout_toRightOf="@+id/iv_transport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dip10"
            android:textSize="@dimen/font15"
            android:text="货运通知" />

        <TextView
            android:visibility="gone"
            android:id="@+id/iv_red_point_transport"
            android:layout_width="@dimen/dip15"
            android:layout_height="@dimen/dip15"
            android:gravity="center"
            android:textSize="@dimen/font10"
            android:textColor="@color/white"
            android:background="@mipmap/sin"
            android:layout_toRightOf="@+id/tv_transport"
            android:layout_alignTop="@+id/tv_transport" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dip60"
        android:layout_height="1px"
        android:background="@color/line_color" />

    <RelativeLayout
        android:id="@+id/layout_system_message"
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dip60"
        android:background="@color/white">

        <ImageView
            android:id="@+id/iv_system"
            android:layout_marginLeft="@dimen/dip10"
            android:layout_centerVertical="true"
            android:layout_width="@dimen/dip50"
            android:layout_height="@dimen/dip50"
            android:src="@drawable/icon_system_message"
            android:scaleType="centerInside"/>

        <TextView
            android:id="@+id/tv_system"
            android:layout_toRightOf="@+id/iv_system"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/dip10"
            android:textSize="@dimen/font15"
            android:text="系统消息" />

        <TextView
            android:visibility="gone"
            android:layout_toRightOf="@+id/tv_system"
            android:id="@+id/iv_red_point_system"
            android:layout_alignTop="@+id/tv_system"
            android:layout_width="@dimen/dip15"
            android:layout_height="@dimen/dip15"
            android:gravity="center"
            android:textSize="@dimen/font10"
            android:textColor="@color/white"
            android:background="@mipmap/sin"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/dip60"
        android:layout_height="1px"
        android:background="@color/line_color" />

</LinearLayout>