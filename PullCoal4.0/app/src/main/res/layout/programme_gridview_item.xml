<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/more_rouet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <TextView
            android:padding="@dimen/dip2"
            android:background="@drawable/shape_blue_top"
            android:gravity="center_horizontal"
            android:id="@+id/first_scheme_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2.0dp"
            android:text="时间最短"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <LinearLayout
            android:id="@+id/first_scheme"
            android:layout_marginTop="-3dp"
            android:paddingBottom="@dimen/dip5"
            android:background="@drawable/shape_blue_down"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="@dimen/dip5"
                android:gravity="center_horizontal"
                android:id="@+id/first_scheme_time_consuming"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0小时0分"
                android:textStyle="bold"
                android:textColor="@color/app_title_text_color"
                android:textSize="16sp" />

            <TextView
                android:gravity="center_horizontal"
                android:id="@+id/first_scheme_smileage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.0dp"
                android:text="0公里"
                android:textColor="@color/app_title_text_color"
                android:textSize="11sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:padding="@dimen/dip15"
        android:id="@+id/one_rouet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/time_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16" />

        <TextView
            android:id="@+id/distance"
            android:layout_marginLeft="@dimen/dip20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView" />

    </LinearLayout>

</RelativeLayout>