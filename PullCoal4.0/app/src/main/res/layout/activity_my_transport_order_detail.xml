<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include android:id="@+id/title_bar" layout="@layout/layout_main_header" />

    <!--被动接单布局-->
    <LinearLayout
        android:layout_below="@+id/title_bar"
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dip5"
            android:layout_marginLeft="@dimen/dip5"
            android:layout_marginRight="@dimen/dip5"
            android:background="@color/actionsheet_blue" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dip10"
            android:layout_marginRight="@dimen/dip10">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip10"
                android:layout_marginTop="@dimen/dip10"
                android:text="是否接受货运邀请？"
                android:textColor="@color/actionsheet_blue" />

            <TextView
                android:id="@+id/tv_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@color/btn_blue_normal"
                android:ems="5"
                android:gravity="center"
                android:padding="@dimen/dip5"
                android:text="接受"
                android:textColor="@color/white" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

    </LinearLayout>


    <ScrollView
        android:fadingEdge="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/layout_top"
        android:background="@color/background_color"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View
                android:layout_marginRight="@dimen/dip5"
                android:layout_marginLeft="@dimen/dip5"
                android:id="@+id/scroll_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip5"
                android:background="@color/actionsheet_blue" />

            <!--货运单号布局-->
            <LinearLayout
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/dip40"
                    android:layout_height="@dimen/dip40"
                    android:scaleType="centerInside"
                    android:src="@drawable/icon_transport_order_number" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="运单编号：" />

                <TextView
                    android:id="@+id/tv_my_transport_order_num"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/short_red" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <!--地址布局-->
            <RelativeLayout
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <!--始发地地址-->
                <RelativeLayout
                    android:layout_toLeftOf="@+id/iv_navi"
                    android:id="@+id/layout_from"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iv_start"
                        android:layout_width="@dimen/dip30"
                        android:layout_height="@dimen/dip30"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dip5"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_cargo_detail_start" />

                    <TextView
                        android:id="@+id/tv_start_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_start"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        android:padding="@dimen/dip5" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_start_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_start_area"
                        android:layout_below="@+id/tv_start_area"
                        android:layout_marginTop="@dimen/dip10"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:padding="@dimen/dip5"
                        android:textSize="12sp" />

                </RelativeLayout>

                <!--目的地地址-->
                <RelativeLayout
                    android:layout_toLeftOf="@+id/iv_navi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_from">

                    <ImageView
                        android:id="@+id/iv_end"
                        android:layout_width="@dimen/dip30"
                        android:layout_height="@dimen/dip30"
                        android:layout_centerVertical="true"
                        android:padding="@dimen/dip5"
                        android:scaleType="centerInside"
                        android:src="@drawable/icon_cargo_detail_destination" />


                    <TextView
                        android:id="@+id/tv_end_area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_end"
                        android:gravity="center_vertical"
                        android:maxLines="3"
                        android:padding="@dimen/dip5" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tv_end_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tv_end_area"
                        android:layout_below="@+id/tv_end_area"
                        android:layout_marginTop="@dimen/dip10"
                        android:gravity="center_vertical"
                        android:maxLines="2"
                        android:padding="@dimen/dip5"
                        android:textSize="12sp" />

                </RelativeLayout>

                <!--导航布局-->
                <LinearLayout
                    android:id="@+id/iv_navi"
                    android:orientation="vertical"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dip5">

                    <ImageView
                        android:layout_width="@dimen/dip30"
                        android:layout_height="@dimen/dip20"
                        android:layout_gravity="center"
                        android:scaleType="centerInside"
                        android:src="@mipmap/icon_to"
                        android:visibility="visible" />

                    <TextView
                        android:textColor="@color/actionsheet_gray"
                        android:textSize="@dimen/font10"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="距离"/>

                    <TextView
                        android:textColor="@color/actionsheet_gray"
                        android:id="@+id/tv_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font10"
                        android:gravity="center"
                        android:lines="1"
                        android:text="537.82公里"/>


                </LinearLayout>

            </RelativeLayout>

            <View
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dip40"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_transport_name"
                    android:layout_width="@dimen/dip0"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dip5"
                    android:layout_weight="1"
                    android:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="@dimen/dip0"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_margin="@dimen/dip5"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="运费："
                        android:textColor="@color/gray" />

                    <TextView
                        android:id="@+id/tv_transport_cost"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/short_red" />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:id="@+id/label_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="@dimen/dip10">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/publishTag0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/label_one_shape"
                    android:padding="@dimen/dip3"
                    android:text="标签一"
                    android:textColor="@color/white" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/publishTag1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip10"
                    android:background="@drawable/label_two_shape"
                    android:padding="@dimen/dip3"
                    android:text="标签二"
                    android:textColor="@color/white" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/publishTag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip10"
                    android:background="@drawable/label_three_shape"
                    android:padding="@dimen/dip3"
                    android:text="标签三"
                    android:textColor="@color/white" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/publishTag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dip10"
                    android:background="@drawable/label_four_shape"
                    android:padding="@dimen/dip3"
                    android:text="标签四"
                    android:textColor="@color/white" />

            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:id="@+id/remark_ll_view"
                android:background="@color/white"
                android:padding="@dimen/dip10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注："
                    android:textColor="@color/actionsheet_gray"
                    android:textSize="@dimen/font15" />

                <TextView
                    android:id="@+id/tv_transport_remark"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="4"
                    android:lineSpacingMultiplier="1.2"
                    android:textColor="@color/actionsheet_gray"
                    android:textSize="@dimen/font15" />
            </LinearLayout>

            <View
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />


            <LinearLayout
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:id="@+id/layout_normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip15"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/tv_normal_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dip5"
                    android:layout_marginLeft="@dimen/dip5"
                    android:layout_marginRight="@dimen/dip5"
                    android:layout_marginTop="@dimen/dip10"
                    android:textSize="@dimen/font13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip70"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/dip0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_normal_status_1"
                            android:background="@color/lighter_gray" />

                        <ImageView
                            android:id="@+id/iv_normal_status_1"
                            android:layout_width="@dimen/dip15"
                            android:layout_height="@dimen/dip15"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_status_1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_normal_status_1"
                            android:background="@color/lighter_gray" />


                        <TextView
                            android:id="@+id/tv_normal_status_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_normal_status_1"
                            android:layout_marginTop="@dimen/dip5"
                            android:gravity="center"
                            android:text="已抢单"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font13" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dip0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_normal_status_2"
                            android:background="@color/lighter_gray" />

                        <ImageView
                            android:id="@+id/iv_normal_status_2"
                            android:layout_width="@dimen/dip15"
                            android:layout_height="@dimen/dip15"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_status_1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_normal_status_2"
                            android:background="@color/lighter_gray" />


                        <TextView
                            android:id="@+id/tv_normal_status_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_normal_status_2"
                            android:layout_marginTop="@dimen/dip5"
                            android:gravity="center"
                            android:text="待审核"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font13" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dip0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_normal_status_3"
                            android:background="@color/lighter_gray" />

                        <ImageView
                            android:id="@+id/iv_normal_status_3"
                            android:layout_width="@dimen/dip15"
                            android:layout_height="@dimen/dip15"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_status_1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_normal_status_3"
                            android:background="@color/lighter_gray" />

                        <TextView
                            android:id="@+id/tv_normal_status_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_normal_status_3"
                            android:layout_marginTop="@dimen/dip5"
                            android:gravity="center"
                            android:text="进行中"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dip0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_normal_status_4"
                            android:background="@color/lighter_gray" />

                        <ImageView
                            android:id="@+id/iv_normal_status_4"
                            android:layout_width="@dimen/dip15"
                            android:layout_height="@dimen/dip15"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_status_2" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_normal_status_4"
                            android:background="@color/lighter_gray" />


                        <TextView
                            android:id="@+id/tv_normal_status_4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_normal_status_4"
                            android:layout_marginTop="@dimen/dip5"
                            android:gravity="center"
                            android:text="完成"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font13" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

            </LinearLayout>


            <!--取消-->
            <LinearLayout
                android:layout_marginRight="@dimen/dip10"
                android:layout_marginLeft="@dimen/dip10"
                android:id="@+id/layout_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dip20"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/tv_cancel_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dip5"
                    android:layout_marginLeft="@dimen/dip5"
                    android:layout_marginRight="@dimen/dip5"
                    android:layout_marginTop="@dimen/dip10"
                    android:textSize="@dimen/font13" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip70"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/dip0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_cancel_status_1"
                            android:background="@color/lighter_gray" />

                        <ImageView
                            android:id="@+id/iv_cancel_status_1"
                            android:layout_width="@dimen/dip15"
                            android:layout_height="@dimen/dip15"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_status_1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_cancel_status_1"
                            android:background="@color/lighter_gray" />


                        <TextView
                            android:id="@+id/tv_cancel_status_1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_cancel_status_1"
                            android:layout_marginTop="@dimen/dip5"
                            android:gravity="center"
                            android:text="已抢单"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font13" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dip0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_cancel_status_2"
                            android:background="@color/lighter_gray" />

                        <ImageView
                            android:id="@+id/iv_cancel_status_2"
                            android:layout_width="@dimen/dip15"
                            android:layout_height="@dimen/dip15"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_status_1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_cancel_status_2"
                            android:background="@color/lighter_gray" />


                        <TextView
                            android:id="@+id/tv_cancel_status_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_cancel_status_2"
                            android:layout_marginTop="@dimen/dip5"
                            android:gravity="center"
                            android:text="已受理"
                            android:textColor="@color/gray"
                            android:textSize="@dimen/font13" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/dip0"
                        android:layout_height="match_parent"
                        android:layout_weight="1">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toLeftOf="@+id/iv_cancel_status_3"
                            android:background="@color/lighter_gray" />

                        <ImageView
                            android:id="@+id/iv_cancel_status_3"
                            android:layout_width="@dimen/dip15"
                            android:layout_height="@dimen/dip15"
                            android:layout_centerInParent="true"
                            android:scaleType="fitCenter"
                            android:src="@drawable/icon_status_2" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="3px"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/iv_cancel_status_3"
                            android:background="@color/lighter_gray" />


                        <TextView
                            android:id="@+id/tv_cancel_status_3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/iv_cancel_status_3"
                            android:layout_marginTop="@dimen/dip5"
                            android:gravity="center"
                            android:text="完成"
                            android:textColor="@color/actionsheet_blue"
                            android:textSize="@dimen/font13" />
                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="@dimen/dip15"
                android:background="@color/line_color" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <!--信息部来源-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/dip10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="信息来源："
                        android:textColor="@color/app_title_text_color_normal" />

                    <TextView
                        android:id="@+id/tv_source"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_title_text_color_normal" />
                </LinearLayout>

                <View
                    android:layout_marginRight="@dimen/dip10"
                    android:layout_marginLeft="@dimen/dip10"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <RelativeLayout
                    android:layout_marginTop="@dimen/dip10"
                    android:paddingRight="@dimen/dip10"
                    android:paddingLeft="@dimen/dip10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/iv_phone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_info_from_detail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/app_title_text_color_normal"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="信用等级："
                                android:textColor="@color/app_title_text_color_normal" />

                            <com.sxhalo.PullCoal.ui.ResetRatingBar xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/quality_rating"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:isIndicator="true"
                                hedgehog:starCount="5"
                                hedgehog:starEmpty="@mipmap/ratingbar_normal"
                                hedgehog:starFill="@mipmap/ratingbar_pressed"
                                hedgehog:starImageSize="12dp"></com.sxhalo.PullCoal.ui.ResetRatingBar>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dip3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="联  系  人："
                                android:textColor="@color/app_title_text_color_normal" />

                            <TextView
                                android:id="@+id/tv_contact"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/iv_phone"
                        android:layout_width="@dimen/dip40"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:scaleType="centerInside"
                        android:src="@mipmap/derver_tel"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentEnd="true" />

                </RelativeLayout>

                <LinearLayout
                    android:paddingRight="@dimen/dip10"
                    android:paddingBottom="@dimen/dip10"
                    android:paddingLeft="@dimen/dip10"
                    android:layout_marginTop="@dimen/dip3"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="详细地址："
                        android:textColor="@color/app_title_text_color_normal" />

                    <com.sxhalo.PullCoal.ui.JustifyTextView
                        android:id="@+id/tv_detail_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/app_title_text_color_normal" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <View
                android:id="@+id/view_pound_top"
                android:layout_marginTop="@dimen/dip15"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/linearlayout_pound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/dip10"
                android:gravity="center"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/iv_pound_list"
                    android:layout_marginTop="@dimen/dip10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dip150"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/icon_upload_pound_list"/>

                <FrameLayout
                    android:layout_marginTop="@dimen/dip10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray"
                        android:gravity="center"
                        android:text="过磅情况，装卸货品信息"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linearlayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/cargo_suttle"/>

                        <TextView
                            android:id="@+id/tv_cargo_weight"
                            android:layout_marginLeft="@dimen/dip20"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>

                </FrameLayout>

                <Button
                    android:id="@+id/btn_pound_list"
                    android:layout_marginTop="@dimen/dip10"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dip40"
                    android:padding="@dimen/dip5"
                    android:text="@string/upload_pound_list"
                    android:background="@drawable/button_shape"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <View
                android:id="@+id/view_pound_bottom"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_color" />

            <LinearLayout
                android:id="@+id/layout_scroll_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dip15"
                android:layout_marginTop="@dimen/dip15"
                android:background="@color/white"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />

                <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dip10"
                    android:gravity="center" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dip10"
                    android:gravity="center" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dip5"
                    android:gravity="center"
                    android:text="如有特殊疑问，请致电客服400-0912-518"
                    android:textColor="@color/gray" />

                <TextView
                    android:id="@+id/tv_bottom_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dip5"
                    android:gravity="center"
                    android:textColor="@color/gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/line_color" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dip50"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btn_add"
            android:layout_width="@dimen/dip0"
            android:layout_height="@dimen/dip40"
            android:layout_marginLeft="@dimen/dip15"
            android:layout_marginRight="@dimen/dip15"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="取消运单"
            android:textColor="@color/white"
            android:textSize="@dimen/font18"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_complete"
            android:layout_width="@dimen/dip0"
            android:layout_height="@dimen/dip40"
            android:layout_marginLeft="@dimen/dip15"
            android:layout_marginRight="@dimen/dip15"
            android:layout_weight="1"
            android:background="@drawable/button_shape"
            android:gravity="center"
            android:text="完成货运"
            android:textColor="@color/white"
            android:textSize="@dimen/font18"
            android:visibility="gone" />
    </LinearLayout>

</RelativeLayout>