<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_bt_bg"
        android:orientation="vertical"
        android:paddingTop="23.83dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="19dp" >

            <ImageView
                android:id="@+id/massage_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="3dp"
                android:background="@mipmap/system_message" />

            <TextView
                android:id="@+id/massage_title"
                android:layout_width="205dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/massage_image"
                android:ellipsize="end"
                android:gravity="top"
                android:includeFontPadding="false"
                android:lines="1"
                android:scrollHorizontally="true"
                android:text="系统消息"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:text=""
                android:textColor="#c7c7c7"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/content_massage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/massage_title"
                android:layout_alignRight="@+id/time_text"
                android:layout_below="@+id/massage_title"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:text=""
                android:textColor="#7d7d7d"
                android:textSize="14sp" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#ffefefef" />
    </LinearLayout>

</LinearLayout>