<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/detail_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg_color"
    android:orientation="vertical">

    <include
        android:id="@+id/title_bar"
        layout="@layout/layout_main_header" />

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_below="@+id/title_bar"
        android:layout_width="@dimen/dip90"
        android:layout_height="@dimen/dip90"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dip20"
        android:src="@mipmap/icon" />

    <TextView
        android:id="@+id/tv_version"
        android:layout_below="@+id/iv_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dip15"
        android:text="拉煤宝3.6" />


    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/pull_coal_introduce"
            android:layout_width="match_parent"
            android:layout_height="50.5dp"
            android:background="@drawable/item_bt_bg"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="拉煤宝简介"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <ImageView style="@style/setting_arrow" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/layout_feedback"
            android:layout_width="match_parent"
            android:layout_height="50.5dp"
            android:background="@drawable/item_bt_bg"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_weight="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="反馈建议"
                    android:textSize="16.0sp" />
            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|right">

                <ImageView style="@style/setting_arrow" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_color" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_declare"
        android:layout_marginBottom="@dimen/dip10"
        android:layout_above="@+id/tv_belong_tips"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:textColor="@color/actionsheet_gray"
        android:padding="@dimen/dip15"/>

    <TextView
        android:id="@+id/tv_belong_tips"
        android:layout_marginBottom="@dimen/dip10"
        android:layout_above="@+id/tv_all_right"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/actionsheet_gray"
        android:gravity="center"
        android:text="光环网络  版权所有"/>

    <TextView
        android:id="@+id/tv_all_right"
        android:layout_alignParentBottom="true"
        android:text="@string/all_right"
        android:layout_marginBottom="@dimen/dip10"
        android:textColor="@color/actionsheet_gray"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>